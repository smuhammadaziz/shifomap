# Server configuration
PORT=8080
NODE_ENV=development

# MongoDB
# Database: one "projects" database contains multiple collections including "platform_admin"
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=projects

# JWT for admin authentication
# Secret: change this in production to a strong random string
# ExpiresIn: token lifetime (e.g. 7d, 30d, 1h)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ISSUER=api-main
JWT_EXPIRES_IN=7d
