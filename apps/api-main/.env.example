# Server configuration
PORT=8080
NODE_ENV=development

# MongoDB
# Database: one "projects" database contains multiple collections including "platform_admin"
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=projects

# JWT for admin authentication
# Secret: change this in production to a strong random string
# ExpiresIn: token lifetime (e.g. 7d, 30d, 1h)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ISSUER=api-main
JWT_EXPIRES_IN=7d

# Google OAuth (for patient mobile app sign-in). Use your Android/iOS client ID from Google Cloud Console.
# GOOGLE_CLIENT_ID=454468242348-6rrdegnc9nhfuoogaqi1iirb4giqjuc6.apps.googleusercontent.com

# Telegram (landing page clinic contact notifications; same bot used by telegram-bot app)
TELEGRAM_BOT_TOKEN=your_bot_token_from_BotFather
# Group chat ID (e.g. -1001234567890). Add bot to group, get ID from @userinfobot or API getUpdates.
TELEGRAM_GROUP_CHAT_ID=-1001234567890
